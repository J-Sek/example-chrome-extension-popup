{
    "version": "0.0.2",
    "manifest_version": 2,
    "name": "One-Click Meteo",
    "description": "Quick preview of current weather forecast from Meteo.pl",
    "browser_action": {
        "default_title": "Preview current weather forecast",
        "default_popup": "popup/popup.html",
        "default_icon": "popup/weather-512.png"
    },
    "permissions": [
        "storage"
    ]
}